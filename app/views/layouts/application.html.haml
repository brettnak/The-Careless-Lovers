%head
  %meta{:charset => "utf-8"}/
  /
    Always force latest IE rendering engine (even in intranet) &amp; Chrome Frame
    Remove this if you use the .htaccess
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
  %title= @title.blank? ? "The Careless Lovers | theCarelessLovers.com" : "#{@title} | The Careless Lovers | theCarelessLovers.com"
  %meta{:content => "", :name => "The Careless Lovers"}/
  %meta{:content => "", :name => "The Careless Lovers"}/

  %link{:href => "/favicon.ico", :rel => "shortcut icon"}/
  = stylesheet_link_tag "style"
  = stylesheet_link_tag "main"

  %script{:src => "/javascripts/libs/modernizr-1.7.min.js"}
  = csrf_meta_tag
  %script{:src => "http://ajax.googleapis.com/ajax/libs/jquery/1.5.1/jquery.min.js"}
  :javascript
    !window.jQuery && document.write('<script src="javascripts/libs/jquery-1.5.1.min.js"><\/script>')
  = javascript_include_tag( "main" )

  = yield :javascript

%body
  #container
    %div.left-rail-wrapper
      %div.left-rail
        %div.left-rail-inner
          %nav
            = render( :partial => 'shared/navigation' )
    %div.right-rail
      #main
        = yield
  / ! end of #container

  /[if lt IE 7 ]
    <script src="/javascripts/libs/dd_belatedpng.js?"></script>
